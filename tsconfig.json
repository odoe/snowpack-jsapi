
{
    "compilerOptions": {
      "target": "esnext",
      "lib": [
        "dom",
        "esnext"
      ],
      "skipLibCheck": true,
      "esModuleInterop": true,
      "strict": true,
      "forceConsistentCasingInFileNames": true,
      "noFallthroughCasesInSwitch": true,
      "module": "esnext",
      "moduleResolution": "node",
      "resolveJsonModule": true,
      "isolatedModules": true,
      "noEmit": true,
      "jsx": "react-jsx",
  
      "experimentalDecorators": true
    },
    "include": [
      "src"
    ]
  }